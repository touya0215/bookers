<h1>
  Books
</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>

    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><a class="show_100723" href="/books/100723">Show</a></td>
      <td><a class="edit_100723" href="/books/100723/edit">Edit</a></td>
      <td><a data-confirm="Are you sure?" class="destroy_100723" rel="nofollow" data-method="delete" href="/books/100723">Destroy</a></td>
    </tr>
    <% end %>
  </tbody>



</table>


<h2>New book</h2>

<%= form_with model: @book, method: :post do |f| %>
  <div class="field">
    <lavel for="book_title">Title</lavel>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <level for="book_body">Body</level>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>

